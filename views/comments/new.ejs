<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Create a New Comment to <%= item.name %></h1>
        
        <form action="/items/<%= item._id %>/comments" method="POST">
            <input class="form-control" type="text" placeholder="text" name="comment[text]">
            <button class="btn btn-lg btn-default">Submit!</button>
        </form>
        
        <a href="/items">Go Back</a>
    </div>
</div>

